{
    "compilerOptions": {
        "outDir": "dist",

        "module": "ESNext",
        "target": "ES5",

        "lib": ["dom", "dom.iterable", "esnext"],

        "strict": true,

        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": false,

        "sourceMap": true,

        "jsx": "react-jsx"
    }
}
